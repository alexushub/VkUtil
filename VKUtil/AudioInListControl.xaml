<UserControl x:Name="audioInListControl" x:Class="VkUtil.AudioInListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VkUtil"
             mc:Ignorable="d" Width="370" Height="26">
    <Grid>
        <WrapPanel HorizontalAlignment="Stretch">
            <Label x:Name="audioName" Content="{Binding Path=Title}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="290" Height="26"/>
            <Button x:Name="downloadButton" Content="Download" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Height="26"/>
        </WrapPanel>
    </Grid>
</UserControl>
